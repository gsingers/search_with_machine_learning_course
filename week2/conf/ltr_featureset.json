{
  "featureset": {
    "features": [
      {
        "name": "name_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "name": "{{keywords}}"
          }
        }
      },
      {
        "name": "name_phrase_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "name": "{{keywords}}"
          }
        }
      },
      {
        "name": "short_description_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "shortDescription": "{{keywords}}"
          }
        }
      },
      {
        "name": "long_description_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "longDescription": "{{keywords}}"
          }
        }
      },
      {
        "name": "salesRankShortTerm",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "gauss": {
                  "salesRankShortTerm": {
                      "origin": "1.0",
                      "scale": "100"
                  }
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      },
      {
        "name": "salesRankMediumTerm",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "gauss": {
                  "salesRankMediumTerm": {
                      "origin": "1.0",
                      "scale": "1000"
                  }
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      },
      {
        "name": "salesRankLongTerm",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "gauss": {
                  "salesRankLongTerm": {
                      "origin": "1.0",
                      "scale": "1000"
                  }
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      },
      {
        "name": "click_prior",
        "template_language": "mustache",
        "template": {
          "query_string": {
            "query": "{{click_prior_query}}",
            "fields": ["_id"]
          }
        }
      },
      {
        "name": "salePrice",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "field_value_factor": {
                  "field": "salePrice",
                  "missing": 0
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      },
      {
        "name": "regularPrice",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "field_value_factor": {
                  "field": "regularPrice",
                  "missing": 0
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      }
    ]
  }
 }