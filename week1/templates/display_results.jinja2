<div id="search-results" class="search-results">
  {% for hit in search_response.hits.hits %}
    <div class="search-result search-result-{{ loop.cycle('odd', 'even') }}">
      <div><span class="search-result-header">Name</span>: {{ hit._source.name }}</div>
      <div><span class="search-result-header">Class</span>: {{ hit._source.class }}</div>
      <div><span class="search-result-header">categoryPath</span>: {{ hit._source.categoryPath }}</div>
      <div><span class="search-result-header">Description</span>:
        {% if hit._source.shortDescription %}
          {{ hit._source.shortDescription[0] }}
        {% endif %}}
      </div>
    </div>
  {% endfor %}

</div>