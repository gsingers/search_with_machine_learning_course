<div id="aggregations">
  {% if search_response.aggregations%}
    <div class="aggregations-result">
      <div class="agg-header">Price</div>
      {% if "filter.name=regularPrice" not in applied_filters %}
        {% for agg in search_response.aggregations.regularPrice.buckets %}
          {% if agg.doc_count > 0 %}
            <div class="aggregation">
              <div><a
                  href="{{ url_for("search.query") }}?&query={{ query|e }}{{ applied_filters }}&filter.name=regularPrice&regularPrice.type=range&regularPrice.key={{ agg.key }}&regularPrice.from={{ agg.min }}&regularPrice.to={{ agg.max }}&regularPrice.displayName=Price">{{ "$" * loop.index }} : {{ agg.doc_count }}</a>
              </div>
            </div>{% endif %}
        {% endfor %}
      {% else %}
        {# We've already applied it, just display it #}
        {% for agg in search_response.aggregations.regularPrice.buckets %}
          {% if agg.doc_count > 0 %}
            <div class="aggregation">
              <div>{{ agg.key }}: {{ agg.doc_count }}</div>
            </div>{% endif %}
        {% endfor %}
      {% endif %}
    </div>

    {# department #}
    <div class="aggregations-result">
      <div class="agg-header">Department</div>
      {% if "filter.name=department" not in applied_filters %}
        {% for agg in search_response.aggregations.department_agg.buckets %}
          {% if agg.doc_count > 0 %}
            <div class="aggregation">
              <div>
                <a
                  href="{{ url_for("search.query") }}?&query={{ query|e }}{{ applied_filters }}&filter.name=department&department.type=terms&department.key={{ agg.key }}&department.displayName=Department">
                  {{ agg.key }}: {{ agg.doc_count }}
                </a>
              </div>
            </div>{% endif %}
        {% endfor %}
      {% else %}
        {# We've already applied it, just display it #}
        {% for agg in search_response.aggregations.regularPrice.buckets %}
          {% if agg.doc_count > 0 %}
            <div class="aggregation">
              <div>{{ agg.key }}: {{ agg.doc_count }}</div>
            </div>{% endif %}
        {% endfor %}
      {% endif %}
    </div>


    {% if "missing_images" in search_response.aggregations  %}
      <div class="aggregations-result">
        <div class="agg-header">Missing Data</div>
        <div>image: {{ search_response.aggregations.missing_images.doc_count }}</div>
      </div>
    {% endif %}
  {% endif %}
</div>
